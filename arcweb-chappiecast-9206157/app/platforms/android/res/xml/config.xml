<?xml version='1.0' encoding='utf-8'?>
<widget id="co.arcweb.chappiecast" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <icon density="hdpi" src="res/android/icon-hdpi.png" />
    <icon density="ldpi" src="res/android/icon-ldpi.png" />
    <icon density="mdpi" src="res/android/icon-mdpi.png" />
    <icon density="xhdpi" src="res/android/icon-xhdpi.png" />
    <icon density="xxhdpi" src="res/android/icon-xxhdpi.png" />
    <icon density="xxxhdpi" src="res/android/icon-xxxhdpi.png" />
    <splash density="port-hdpi" src="res/android/splash-hdpi.png" />
    <splash density="port-ldpi" src="res/android/splash-ldpi.png" />
    <splash density="port-mdpi" src="res/android/splash-mdpi.png" />
    <splash density="port-xhdpi" src="res/android/splash-xhdpi.png" />
    <splash density="port-xxhdpi" src="res/android/splash-xxhdpi.png" />
    <splash density="port-xxxhdpi" src="res/android/splash-xxxhdpi.png" />
    <name>ChappieCast</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="max@arcweb.co" href="http://arcweb.co">
        Max Furman
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="web_hi_res_512.png" />
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
</widget>
